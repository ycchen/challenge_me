<p id="notice"><%= notice %></p>

<h1>Task Schedules</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Due date</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @task_schedules.each do |task_schedule| %>
      <tr>
        <td><%= task_schedule.name %></td>
        <td><%= task_schedule.due_date %></td>
        <td><%= task_schedule.user %></td>
        <td><%= link_to 'Show', task_schedule %></td>
        <td><%= link_to 'Edit', edit_task_schedule_path(task_schedule) %></td>
        <td><%= link_to 'Destroy', task_schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task Schedule', new_task_schedule_path %>
